rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - authenticated users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Shop owners collection - authenticated users can read/write their own data
    match /shop_owners/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Shops subcollection under shop-owners - shop owners can manage their own shops
    match /shop-owners/{ownerId}/shops/{shopId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == ownerId;
    }

    // Reservations collection - authenticated users can read/write based on role
    match /reservations/{reservationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid == resource.data.customerId || request.auth.uid == resource.data.ownerId);
      allow delete: if request.auth != null && (request.auth.uid == resource.data.customerId || request.auth.uid == resource.data.ownerId);
    }

    // Allow reading reservations for demo purposes (temporary)
    match /reservations {
      allow read: if true;
      allow write: if true;
    }

    // Allow reading shops through collection group query for browse functionality
    match /{path=**}/shops/{shopId} {
      allow read: if request.auth != null;
    }

    // Ratings collection - authenticated users can read/write based on role
    match /ratings/{ratingId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.customerId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.customerId;
    }

    // Allow reading ratings for demo purposes (temporary)
    match /ratings {
      allow read: if true;
      allow write: if true;
    }
  }
}
